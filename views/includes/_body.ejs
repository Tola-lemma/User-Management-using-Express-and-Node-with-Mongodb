<!-- main site -->
<div class="user">
    <a href="/add-user" class="text-decoration-none"><span class="shadow-lg mb-2 rounded"> New User<i class="fas fa-user"></i></span></a>
</div>
<form action="/" method="POST">
    <div class="table-responsive">
    <table class="table table-hover table-sm text-center">
        <thead class="bg-info">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>@Email</th>
                <th>Gender</th>
                <th>status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < users.length; i++) { %>
            <tr>
                <td data-title="ID"><%= i + 1 %></td>
                <td data-title="Name"><%= users[i].name %></td>
                <td data-title="@Email"><%= users[i].email %></td>
                <td data-title="Gender"><%= users[i].gender %></td>
                <td data-title="status"><%= users[i].status %></td>
                <td data-title="Action">
                    <a href="/update-user?id=<%= users[i]._id %>" class="btn btn-sm shadow-lg rounded-pill text-decoration-none">
                        <span><i class="fas fa-pencil-alt" style="font-size: 10px;"></i></span>
                    </a>
                    <a  class="btn btn-sm shadow-lg  rounded-pill ms-2">
                        <span><i class="fas fa-times" style="font-size: 12px;"></i></span>
                    </a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
</form>